@model MySourceControlSystem.Web.ViewModels.Repositories.CreateRepositoryViewModel

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" id="exampleInputEmail1" placeholder="Write name">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" class="form-control" id="exampleInputEmail1" placeholder="Write description">
    </div>

    <div class="form-check">
        <input asp-for="IsPublic" class="form-check-input" type="radio" id="exampleRadios1" value="false" checked>
        <label class="form-check-label" for="exampleRadios1">
            Private
        </label>
    </div>
    <div class="form-check">
        <input asp-for="IsPublic" class="form-check-input" type="radio" id="exampleRadios2" value="true">
        <label class="form-check-label" for="exampleRadios2">
            Public
        </label>
    </div>
    <hr />

    <input class="btn btn-primary" type="submit" name="submit" value="Submit" />
</form>
